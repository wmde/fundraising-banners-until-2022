.wmde-banner {
	.button-group__button {
		height: 60px;
		line-height: 60px;
		border-radius: 30px;
		font-weight: bold;
		color: $color-white;
		background: $color-secondary;

		&:hover,
		&:focus {
			background: $color-secondary-hover;
		}
	}

	.button-group__error {
		display: block;
		padding: 5px 0;
		width: 100%;
		color: $color-error;
		text-align: center;
		font-size: 14px;
		font-weight: bold;
	}
}
