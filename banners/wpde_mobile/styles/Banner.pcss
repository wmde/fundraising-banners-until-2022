.wmde-banner {
	visibility: hidden;
	width: 100%;
	font-size: 16px;
	font-family: $banner-font-family;

	* {
		box-sizing: border-box;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.text-highlight {
		font-weight: bold;
	}

	&--visible {
		visibility: visible;
	}

	&--hidden {
		display: none;
	}

	&--mini-banner {
		.wmde-banner-full {
			visibility: hidden;
		}
	}

	&--full-page {
		.wmde-banner-mini {
			visibility: hidden;
		}
	}

	img {
		border: 0 none;
	}

	button {
		border: 0;
	}

	&-slide-content .wmde-banner-slide-content-first p {
		margin: 13px 0 16px;
		padding: 0;
	}
}
