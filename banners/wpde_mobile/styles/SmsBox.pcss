.wmde-banner {

	.sms-box {
		flex: 1 1 auto;
		width: 100%;
	}

	.sms-box a {
		color: $color-black-light;
		text-decoration: none;
		margin: 0 0 6px;
	}

	.sms-box__hint {
		display: block;
		font-size: 9pt;
		line-height: 12pt;
		margin-right: 0;
		width: 100%;
		padding: 0 0 15px;
		color: $color-secondary-dark;
	}
}
