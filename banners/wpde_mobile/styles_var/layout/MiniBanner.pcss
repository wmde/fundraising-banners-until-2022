.wmde-banner {
	.mini-banner {
		padding: 16px;
		position: relative;

		.close-button {
			position: absolute;
			top: 16px;
			right: 16px;
		}

		.headline {
			height: 25px;
			text-align: center;
			margin-bottom: 16px;
		}

		.infobox {
			margin-bottom: 16px;
		}

		&__button {
			width: 100%;
			height: 40px;
			line-height: 40px;
		}
	}
}
