#WMDE_Banner {

	/**
	 * GLOBAL RESET
	 */
	img {
		border: 0 none;
	}

	/**
	 * CUSTOM
	 */

	display: none;
	width: 100%;
	position: fixed;
	z-index: 10000;
	font-size: 16px;

	.banner {
		height: 247px;
		display: flex;

		font-family: 'Arial', 'Helvetica', 'Verdana', sans-serif;
		box-shadow: 0 3px 5px rgba( 0, 0, 0, 0.5 );
		background-color: #ffffff;
	}

	.infobox {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		flex: 0 1 45%;

		border: 0 none;
		border-radius: 0;
		background: #dce4e7;
		padding: 0;
		margin: 0;

	}

	.infobox__text {
		color: #98b414;
		font-size: 1.05em;
		line-height: 1.2em;
		text-align: left;
		margin: 0 1em 0.5em 1em;
	}

	.text__headline {
		margin: 0.2em 0;
	}

	.text__headline:nth-of-type( 1 ) {
		margin-top: 35px;
	}

	.text__headline:nth-of-type( 2 ) {
		margin: 20px 0 0 10px;
	}

	.text__paragraph {
		margin: 0;
	}

	.text__headline--bold,
	.text__paragraph--bold {
		font-weight: bold;
	}

	.text__headline--italic,
	.text__paragraph--italic {
		font-style: italic;
	}

	.text__paragraph .text__highlight {
		border-bottom: solid 3px #990000;
		padding: 0 0.1em;
		background: transparent;
		font-weight: bold;
	}

	/* This is for keeping the same banner size when testing different banner texts.
	The placeholder text element should contain the text that was removed.
	*/
	.text__hidden-placeholder {
		visibility: hidden;
	}

	.infobox__footer {
		padding: 0.025em 0 0 2em;
		background: url( 'https://upload.wikimedia.org/wikipedia/donate/9/99/RedInfoI.svg' ) no-repeat left 0.5em top 0.1em/18px 18px;
	}

	.footer {
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;

		font-size: 0.8em;
		line-height: 1.6em;
	}

	.footer__info {
		text-transform: uppercase;
	}

	.footer__item span {
		margin-right: 0.5em;
	}

	.footer__importantinfo {
		font-weight: bold;
	}

	.footer__item {
		color: #636466;
		white-space: nowrap;
	}

	.footer__item--rightflex {
		flex-grow: 1;
		text-align: right;
	}

	.application-of-funds-link {
		color: #636466;
	}

	/* Form styling */

	.form {
		position: relative;
		flex: 0 0 220px;
		width: 16em;
		min-width: 12em;
		padding: 0.5em 0 0 0.5em;
		margin: 0 0.5em 0 0;
	}

	.select-group {
		border: 0;
		margin: 0 auto;
		padding: 0 0.5em 0.5em 0.5em;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;
		flex: 1 1 100%;
		font-size: 0.9em;
		font-weight: bold;
	}

	.select-group--with-error {
		background: #fee7e6;
		border: 1px solid #dd3334;
	}

	.select-group__errormessage {
		display: none; /* Message will be shown by JS code */
		color: #ffffff;
		font-weight: bold;
		text-align: center;
		width: 100%;
		margin-bottom: 0.2em;
		font-size: 0.74em;
	}

	.select-group__input {
		display: none;
	}

	.select-group__custom-input {
		padding: 0.4em;
		width: 100%;
		height: 100%;
		margin: 0;
		font-size: 0.74em;
		text-align: center;
		border: 1px solid #9aa0a7;
		border-radius: 4px;
		box-sizing: border-box;
	}

	.select-group__option {
		flex: 1 1 auto;
		padding: 0 0.3em 0.3em 0;
		margin: 0;
		box-sizing: border-box;
		display: block;
	}

	.select-group__option--fullwidth {
		width: 100%;
	}

	.select-group__option--halfwidth {
		width: 50%;
	}

	.select-group__option--quarterwidth {
		width: 25%;
	}

	.select-group__option--biggertext {
		font-size: 1em;
	}

	.select-group__state {
		display: block;
		color: #000000;
		background: #f8f9fa;
		border: 1px solid #9aa0a7;
		border-radius: 2px;
		padding: 0.1em 0;
		line-height: 2em;
		cursor: pointer;
		text-align: center;
		font-size: 0.8em;
		box-sizing: border-box;
	}

	.select-group__input:checked + .select-group__state {
		color: #98b414;
		background: #ffffff;
		border: 1px solid #98b414;
		outline: 2px solid #98b414;
		border-radius: 0;
	}

	.button-group {
		border: 0;
		margin: 0 auto;
		padding: 0 0.5em;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;
		flex: 1 1 100%;
	}

	.button-group__button {
		flex: 1 1 auto;
		padding: 0 0.3em 0.3em 0;
		margin: 0 -1px 0 -1px;
		box-sizing: border-box;
		display: block;
		cursor: pointer;
		/* Override browser defaults */
		border: 0 none;
		background: transparent;
		font-size: inherit;
	}

	.button-group__button--halfwidth {
		width: 50%;
	}

	.button-group__label {
		display: block;
		color: #ffffff;
		background: #98b414;
		border: 1px solid #9aa0a7;
		border-radius: 2px;
		padding: 0.1em 0;
		line-height: 2em;
		font-size: 0.7em;
		font-weight: bold;
		text-align: center;
		box-sizing: border-box;
	}

	.close {
		position: absolute;
		width: 18px;
		margin: 0.25em 0.25em 0.25em 0;
		top: 0;
		right: 0;
		flex: auto;
	}

	.close img {
		width: 14px;
		height: 14px;
	}

	.click-tracking {
		display: none;
	}

	.click-tracking__pixel {
		height: 0;
		width: 0;
		border: 0 none;
	}

	.progress_bar__days_left {
		display: none;
	}

	.infobox__footer,
	.form__footer {
		font-size: 14px;
		background: transparent;
		padding: 0 0.3em 0.3em 0.9em;
	}

	.form__footer {
		position: absolute;
		bottom: 0;
		right: 9px;
	}

	.presents {
		flex: 1 0 190px;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;

		.presents__secoundrow {
			display: flex;
		}

		.present_image {
			cursor: pointer;
			margin: auto;
		}

		.present_button {
			display: flex;
			width: 75px;
			height: 25px;
			line-height: 25px;
			margin: 5px auto;
			background: #d1d8de;
			color: #ffffff;
			text-align: center;
			font-size: 0.8em;
			font-weight: bold;
			cursor: pointer;

			input {
				display: none;
			}

			.present__amount,
			.reduce__amount,
			.increase__amount {
				display: inline-block;
				height: 25px;
			}

			.reduce__amount {
				margin-right: auto;
				width: 18px;
				background: url( 'https://upload.wikimedia.org/wikipedia/commons/9/93/Minus_im_Kreis.png' ) no-repeat  center;
				opacity: 0;
			}

			.increase__amount {
				margin-left: auto;
				width: 18px;
				background: url( 'https://upload.wikimedia.org/wikipedia/commons/f/f1/Plus_im_Kreis.png' ) no-repeat  center;
			}
		}
	}

	.present {
		text-align: center;
	}

	.present.active {
		.reduce__amount {
			opacity: 1;
		}
		.present_button {
			background: #98b414;
		}
	}

	.present.hovered {
		.present_button {
			background: #98b414;
		}
	}

	.present__small {
		flex: 1 0 95px;
		margin-top: 20px;
		.present_image {
			width: 35px;
			height: 40px;
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/6/68/5%E2%82%AC-Box-grey.png' ) no-repeat center;
		}
	}

	.present__medium {
		width: 100%;
		margin-top: 25px;
		.present_image {
			width: 41px;
			height: 46px;
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/e/e7/20%E2%82%AC-Box-grey.png' ) no-repeat  center;
		}
	}

	.present__large {
		flex: 1 0 95px;
		margin-top: 25px;
		.present_image {
			width: 54px;
			height: 60px;
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/a/a2/100%E2%82%AC-Box-grey.png' ) no-repeat  center;
		}
	}

	.present__small.hovered,
	.present__small.active {
		.present_image {
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/1/1b/5%E2%82%AC-Box-col.png' ) no-repeat center;
		}
	}

	.present__medium.hovered,
	.present__medium.active {
		.present_image {
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/d/de/20%E2%82%AC-Box-col.png' ) no-repeat center;
		}
	}

	.present__large.hovered,
	.present__large.active {
		.present_image {
			background: url( 'https://upload.wikimedia.org/wikipedia/commons/b/b5/100%E2%82%AC-Box-col.png' ) no-repeat center;
		}
	}

	.form__text {
		color: #98b414;
		text-align: center;
		font-weight: bold;
		font-size: 0.8em;
		padding: 0 0.5em 0 0.5em;

		p {
			margin: 0 0 0.4em 0;
		}
	}

	.WMDE-Banner-amounts,
	.WMDE-Banner-frequency,
	.WMDE-Banner-payment-type {
		padding: 0.1em 0.5em 0.1em 0.5em;
		margin: 0 0 0.1em 0;
	}

	.WMDE-Banner-amounts {
		text-align: center;
	}

	.select-group__option--thirdwidth {
		width: 33%;
	}

	.select-group__option__custom-input {
		width: 100%;
	}

	.select-group__custom--big .select-group__custom-input {
		margin: auto;
		width: 50%;
		border-top: 0;
		border-right: 0;
		border-left: 0;
		color: #98b414;
		font-weight: bold;
		font-size: 1em;
	}

	.select-group__custom--big:after {
		font-size: 0.9em;
		color: #98b414;
		content: 'â‚¬';
	}

	.select-group__custom-input::placeholder {
		color: #000000;
		font-size: 0.8em;
		font-weight: normal;
		font-style: italic;
	}

	.form--with-error {
		.form__text-middle {
			display: none;
		}

		.select-group__errormessage {
			color: #dd3334;
			font-size: 0.7em;
		}
	}

	#amount_label_1,
	#amount_label_2,
	#amount_label_3,
	#amount_label_4,
	#amount_label_5 {
		display: none;
	}

	@media screen and ( min-width: 1440px ) {
		.infobox__text {
			font-size: 1.2em;
			line-height: 1.3em;
		}
	}

	@media screen and ( max-width: 1440px ) {
		.infobox__text {
			font-size: 1.1em;
			line-height: 1.2em;
		}
	}

	@media screen and ( max-width: 1280px ) {
		.infobox__text {
			font-size: 1em;
			line-height: 1.15em;
		}
	}

	@media screen and ( max-width: 1060px ) {
		.banner {
			height: 235px;
		}

		.infobox__text {
			font-size: 0.95em;
		}
	}

	@media screen and ( max-width: 960px ) {
		.banner {
			height: 235px;
		}

		.infobox {
			flex: 0 1 55%;
		}

		.infobox__text {
			font-size: 0.9em;
			line-height: 1.1em;
		}

		.footer {
			line-height: inherit;
		}

		.presents {
			display: none;
		}

		.form {
			padding: 0.5em 0 0 0.5em;
		}

		.form__text {
			padding: 0 0.5em 0.3em 0.5em;
		}

		.form__text-middle {
			display: none;
		}

		.form--with-error {
			.form__text-top {
				display: none;
			}
		}

		.select-group__state {
			line-height: 1.7em;
		}

		#amount_label_1,
		#amount_label_2,
		#amount_label_3,
		#amount_label_4,
		#amount_label_5 {
			display: block;
		}
	}
}
