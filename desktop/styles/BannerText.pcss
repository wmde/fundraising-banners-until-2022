.wmde-banner {
	.banner-text {
		overflow-x: hidden;
		margin: -10px;

		&-inner {
			display: flex;
			width: 200%;
		}

		&-ctrl,
		&-var {
			flex: 1 0 0;
			padding: 10px;
		}
	}

	&--var {
		.banner-text-inner {
			margin-left: -100%;
		}
	}

	.optional-text {
		display: none;
		@media ( min-width: $breakpoint_l ) {
			&.text-m {
				display: inline;
			}
			&.text-l {
				display: inline;
			}
		}
		@media ( min-width: $breakpoint_xl ) {
			&.text-xl {
				display: inline;
			}
		}
	}
}
