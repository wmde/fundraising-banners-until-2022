.wmde-banner {

	.banner-text {
		padding-right: 1.7em;
		@media ( min-width: $breakpoint_l ) {
			padding-right: 0;
		}
	}

	.banner-headline {
		display: inline;
		margin: 0;
		@media ( min-width: $breakpoint_xl ) {
			display: block;
			margin-bottom: 1em;
		}
	}

	.optional-text {
		display: none;
		@media ( min-width: $breakpoint_m ) {
			&.text-m {
				display: inline;
			}
		}
		@media ( min-width: $breakpoint_l ) {
			&.text-l {
				display: inline;
			}
		}
		@media ( min-width: $breakpoint_xl ) {
			&.text-xl {
				display: inline;
			}
		}
	}

	.banner-text .info-icon {
		position: relative;
		top: -3px;
		left: 0;
	}
}
