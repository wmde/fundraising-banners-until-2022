$color-primary: #da9000;
$color-primary-light: #eabc51;
$color-secondary: #2b6da0;
$color-secondary-light: #a7d7f9;
$color-secondary-lighter: #eaf3ff;
$color-secondary-hover: #3584c6;
$color-error: #990000;

$color-white: #ffffff;
$color-black: #000000;
$color-black-light: #202122;
$color-gray: #808080;
$color-gray-medium: #747474;
$color-gray-light: #dddddd;
$color-gray-blue: #bfd3e3;

$banner-easing: cubic-bezier( 0.63, 0.155, 0.38, 0.885 );
$banner-main-font-family: 'Arial', 'Helvetica', 'Verdana', sans-serif;
$banner-text-font-family: 'Source Serif', 'Linux Libertine', 'Linux Libertine O', 'Georgia', 'Bitstream Charter', serif;

$form-width: 300px;
$form-element-border-radius: 2px;

