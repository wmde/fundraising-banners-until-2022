.wmde-banner {
	.states-popup {
		/* visibility: hidden; */
		font-size: 12px;
		width: 150px;
		background-color: #e1e1e1;
		border-radius: 5px;
		box-shadow: 0px 0px 5px 1px rgba(184,184,184,1);

		&-headline {
			font-weight: bold;
			text-align: center;
		}

		&-content {
			background-color: $color-white;
			border-radius: 0 0 5px 5px;
			margin: 1px;
			padding: 6px 3px;
			text-align: left;
			line-height: 1.3em;
		}
	}
}
