:root {
	--banner-color-black: #000000;
	--banner-main-font-family: 'Arial', 'Helvetica', 'Verdana', sans-serif;
}

#WMDE_Banner {

	/**
	 * GLOBAL RESET
	 */
	img {
		border: 0 none;
	}

	/**
	 * CUSTOM
	 */

	width: 100%;
	position: fixed;
	z-index: 1000;
	display: none;
	font-size: 17px;

	.banner {
		display: flex;

		font-family: var( --banner-main-font-family );
		box-shadow: 0 3px 5px rgba( 0, 0, 0, 0.5 );
		background-color: #ffffff;
	}

	.infobox {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		flex: 0 1 100%;

		border: 5px solid #990000;
		border-radius: 9px;
		background-color: #f8f9fa;
		padding: 0 0.5em 0 0;
		margin: 0.25em;
	}

	.infobox__text {
		color: #000000;
		font-size: 1.05em;
		font-weight: bold;
		line-height: 1.3em;
		text-align: left;
		margin-left: 2rem;
	}

	.text__headline {
		margin: 0.4em 0 0.5em 0;
	}

	.text__paragraph {
		margin: 0.25em 0;
	}

	.text__headline--bold,
	.text__paragraph--bold {
		font-weight: bold;
	}

	.text__headline--italic,
	.text__paragraph--italic {
		font-style: italic;
	}

	.text__highlight {
		color: #ffffff;
		background-color: #990000;
		padding: 0 0.5em;
	}

	/* This is for keeping the same banner size when testing different banner texts.
		 The placeholder text element should contain the text that was removed.
	 */
	.text__hidden-placeholder {
		visibility: hidden;
	}

	.infobox__footer {
		padding: 0.025rem 0 0 2rem;
	}

	.footer {
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;

		font-size: 0.8em;
		line-height: 1.6em;

		border-top: 1px solid #990000;
	}

	.footer__info {
		text-transform: uppercase;
	}

	.footer__item span {
		margin-right: 0.5em;
	}

	.footer__importantinfo {
		font-weight: bold;
	}

	.footer__item {
		white-space: nowrap;
	}

	.footer__item--rightflex {
		flex-grow: 1;
		text-align: right;
	}

	/* Form styling */

	.form {
		width: 15.5em;
		flex-shrink: 0;
		padding: 0 0 0 0.5em;
		margin: 0.5em 0 0.25em 0.25em; /* Same as infobox, but not to the right */
	}

	.select-group {
		border: 0;
		margin: 0 auto;
		padding: 0 0.5em 0.5em 0.5em;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;
		flex: 1 1 100%;
	}

	.select-group--with-error {
		background: #990000;
	}

	.select-group__errormessage {
		display: none; /* Message will be shown by JS code */
		color: #ffffff;
		font-weight: bold;
		text-align: center;
		width: 100%;
		margin-bottom: 0.2em;
		font-size: 0.74em;
	}

	.select-group__input {
		display: none;
	}

	.select-group__custom-input {
		padding: 0.4em;
		width: 100%;
		height: 100%;
		margin: 0;
		font-size: 0.74em;
		border: 1px solid #9aa0a7;
		border-radius: 4px;
		box-sizing: border-box;
		text-align: center;
	}

	.select-group__option {
		flex: 1 1 auto;
		padding: 0 0.2em 0.2em 0;
		margin: 0;
		box-sizing: border-box;
		display: block;
	}

	.select-group__option--fullwidth {
		width: 100%;
	}

	.select-group__option--halfwidth {
		width: 50%;
	}

	.select-group__option--thirdwidth {
		width: 33%;
	}

	.select-group__option--quarterwidth {
		width: 25%;
	}

	.select-group__state {
		display: block;
		background: #f8f9fa;
		border: 1px solid #9aa0a7;
		border-radius: 2px;
		padding: 0.15em 0;
		line-height: 2.3em;
		cursor: pointer;
		text-align: center;
		font-weight: bold;
		font-size: 0.74em;
		box-sizing: border-box;
	}

	.select-group__input:checked + .select-group__state {
		background: #2a4b8d;
		border-color: #7d8389;
		color: #ffffff;
	}

	.button-group {
		border: 0;
		margin: 0 auto;
		padding: 0 0.5em 0 0.5em;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: flex-start;
		flex: 1 1 100%;
	}

	.button-group__button {
		flex: 1 1 auto;
		padding: 0 0.2em 0.2em 0;
		margin: 0;
		box-sizing: border-box;
		display: block;
		cursor: pointer;
		/* Override browser defaults */
		border: 0 none;
		background: transparent;
		font-size: inherit;
	}

	.button-group__button--halfwidth {
		width: 50%;
	}

	.button-group__button--invisible {
		visibility: hidden;
	}

	.button-group__label {
		display: block;
		color: #3366cc;
		background: #f8f9fa;
		border: 1px solid #9aa0a7;
		border-radius: 2px;
		padding: 0.15em 0;
		line-height: 2.5em;
		font-size: 0.74em;
		text-align: center;
		font-weight: bold;
		box-sizing: border-box;
	}

	.close {
		width: 18px;
		margin: 0.25em 0.25em 0.25em 0;
		top: auto;
		right: auto;
		flex: 0 0 18px;
	}

	#langInfo {
		display: none;
		right: 2.5em;
		background: #f2f4ff;
		position: absolute;
		border: 1px solid #c2cedb;
		font-size: 0.8em;
	}

	#langInfo p {
		padding: 2px 4px;
		text-align: center;
	}

	.click-tracking {
		display: none;
	}

	.click-tracking__pixel {
		height: 0;
		width: 0;
		border: 0 none;
	}

	.progress_bar {
		margin-bottom: 0.5em;
	}

	.progress_bar__days_left {
		line-height: 2em;
	}

	.progress_bar__pointer_tip {
		margin-top: 18px;
	}

	.progress_bar__pointer_line {
		margin-top: 20px;
	}

	.application-of-funds-link {
		color: var( --banner-color-black );
	}

}
