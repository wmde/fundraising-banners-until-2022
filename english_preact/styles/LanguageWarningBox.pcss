.wmde-banner {
	.lang-warning {
		right: 0;
		background: #f2f4ff;
		position: absolute;
		border: 1px solid #c2cedb;
		font-size: 0.8em;
		margin-top: 1em;

		&--hidden {
			display: none;
		}
		&--visible {
			display: block;
		}
	}

	.lang-warning p {
		padding: 2px 4px;
		text-align: center;
	}
}
