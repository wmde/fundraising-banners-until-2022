.wmde-banner {
	visibility: hidden;
	width: 100%;

	* {
		box-sizing: border-box;
	}

	&--visible {
		visibility: visible;
	}
	&--hidden {
		display: none;
	}
	&--mini-banner {
		.fullpage-banner {
			visibility: hidden;
		}
	}

	&--full-page {
		.mini-banner {
			visibility: hidden;
		}
	}

	.close-button {
		position: absolute;
		top: 16px;
		right: 16px;
	}

	img {
		border: 0 none;
	}
}
