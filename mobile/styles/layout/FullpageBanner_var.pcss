.wmde-banner {
	.fullpage-banner {
		position: relative;

		&__info {
			padding: 0 16px 16px 16px;
		}

		&__close {
			position: relative;
			height: 16px;
			line-height: 16px;
			text-align: right;
			margin: 16px 16px 10px 0;
		}

		&__heading {
			height: 25px;
			text-align: center;
			margin-bottom: 16px;
		}

		.call-to-action {
			height: 31px;
			line-height: 31px;
			text-align: center;

			&__optional-text {
				display: none;

				@media ( min-width: $breakpoint_tablet_portrait ) {
					display: inline;
				}
			}
		}
	}
}
