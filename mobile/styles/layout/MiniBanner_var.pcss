.wmde-banner {
	.mini-banner {
		padding: 16px;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 100;

		.headline {
			height: 25px;
			text-align: center;
			margin-bottom: 16px;
		}

		.infobox {
			margin-bottom: 16px;
		}

		&__button {
			width: 100%;
			height: 40px;
			line-height: 40px;
		}
	}
}
