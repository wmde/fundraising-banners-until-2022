.wmde-banner {
	.progress_bar {
		/* remove this when campaign starts */
		display: none;

		&__wrapper {
			border: 2px solid $color-primary;
			border-radius: 9px;
			font-weight: bold;
			font-size: 14px;

			@media ( min-width: 360px ) {
				font-size: 16px;
			}
		}

		&__donation_fill {
			background: $color-primary;
			border-radius: 9px;
		}
	}
}
