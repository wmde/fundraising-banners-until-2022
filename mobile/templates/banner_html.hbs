<div id="frbanner" class="frbanner">
	<div id="frbanner-window" class="frbanner-window">
		<div id="frbanner-close"></div>

        <div id="modal-signup" class="cf">

            <div class="infobox">
                <div class="infobox__text">
                    {{> banner_text }}
                </div>
                {{{ progressBar }}}
                <div class="call-to-action">
                    Jetzt sind Sie <span class="call-to-action__optional-text">in Deutschland</span> gefragt.
                </div>
            </div>

			<form id="frbanner-form" class="form" method="post" name="donationForm" action="https://spenden.wikimedia.de/donation/new?piwik_campaign={{ CampaignName }}&piwik_kwd={{ BannerName }}">
				<input type="hidden" id="periode" name="periode" value="0">
				<input type="hidden" id="address_type" name="addressType" value="person">
				<input type="hidden" id="intervalType" name="intervalType" value="0" />
				<input type="hidden" id="impCount" name="impCount" value="" />
				<input type="hidden" id="bImpCount" name="bImpCount" value="" />
				<input type="hidden" id="tracking" name="tracking" value="{{ CampaignName }}/{{ BannerName }}">
				<input type="hidden" id="zahlweise" name="zahlweise" value="" />
				<input type="hidden" id="betrag" name="betrag" value="" />

				<fieldset class="from__section cf">
					<legend class="form__section-head">Häufigkeit wählen</legend>
					<div class="select-group-container">
						<ol class="select-group select-group--tablet-3cols interval-selection" >
							<li class="select-group__option">
								<input class="select-group__input" type="radio" id="interval_onetime" name="interval" value="0"/>
								<label class="select-group__label" for="interval_onetime">einmalig</label>
							</li>
							<li class="select-group__option">
								<input class="select-group__input" type="radio" id="interval_1" name="interval" value="1" />
								<label class="select-group__label" for="interval_1">monatlich</label>
							</li>
							<li class="select-group__option">
								<input class="select-group__input" type="radio" id="interval_12" name="interval" value="12" />
								<label class="select-group__label" for="interval_12">jährlich</label>
							</li>
						</ol>
					</div>
				</fieldset>

				<fieldset class="form__section cf">
					<legend class="form__section-head">Betrag wählen</legend>
					<ol class="select-group select-group--tablet-2cols amount-selection" >
						<li class="select-group__option" id="amount_total_1">
							<input class="select-group__input" name="betrag_auswahl" type="radio" id="amount1" value="5" />
							<label class="select-group__label" id="amount_label_1" for="amount1">5 €</label>
						</li>
						<li class="select-group__option" id="amount_total_2">
							<input class="select-group__input" name="betrag_auswahl" type="radio" id="amount2" value="15" />
							<label class="select-group__label" id="amount_label_2" for="amount2">15 €</label>
						</li>
						<li class="select-group__option" id="amount_total_3">
							<input class="select-group__input" name="betrag_auswahl" type="radio" id="amount3" value="25" />
							<label class="select-group__label" id="amount_label_3" for="amount3">25 €</label>
						</li>
						<li class="select-group__option" id="amount_total_4">
							<input class="select-group__input" name="betrag_auswahl" type="radio" id="amount4" value="50" />
							<label class="select-group__label" id="amount_label_4" for="amount4">50 €</label>
						</li>
						<li class="select-group__option" id="amount_total_6">
							<input class="select-group__input" name="betrag_auswahl" type="radio" id="amount6" value="100" />
							<label class="select-group__label" id="amount_label_6" for="amount6">100 €</label>
						</li>
						<li class="select-group__option" id="amount_total_custom">
							<div class="select-group amount-selection" >
								<input type="text" name="amountGiven" id="amount-other-input" size="1"
									   autocomplete="off" value="" placeholder="anderer" class="select-group__custom-input">
							</div>
						</li>
					</ol>
				</fieldset>

				<fieldset class="form__section cf">
					<legend class="form__section-head">Zahlweise wählen</legend>
					<ol class="button-group button-group--tablet-2cols payment-selection">
						<li class="button-group__container">
							<button class="button-group__button" data-payment-type="PPL">
								PayPal
							</button>
						</li>
						<li class="button-group__container">
							<button class="button-group__button" data-payment-type="MCP">
								Kreditkarte
							</button>
						</li>
						<li class="button-group__container">
							<button class="button-group__button" data-payment-type="UEB">
								Überweisung
							</button>
						</li>
						<li class="button-group__container">
							<button class="button-group__button" data-payment-type="BEZ">
								Lastschrift
							</button>
						</li>
					</ol>
					<ol class="button-group button-group--tablet-1col payment-selection">
						<li class="button-group__container">
							<button class="button-group__button" data-payment-type="SUB">
								Sofort-Überweisung
							</button>
						</li>
						<li class="button-group__container">
							<a href="sms:81190" class="button-group__button a-sms">5 € per SMS</a>
						</li>
						<li class="button-group__hint">
							SMS mit "WIKI" an die 81190. Kosten zzgl. einer Standard-SMS.
						</li>
					</ol>
					<ol class="button-group button-group--tablet-1col">
						<li class="button-group__container-submit">
							<button class="button-group__button button-group__button-submit" id="banner-form-submit">Weiter, um Spende abzuschließen</button>
						</li>
					</ol>
				</fieldset>
			</form>
			<div class="smallprint" id="frbanner-smallprint">
				<div class="smallprint">
					<a href="https://spenden.wikimedia.de/spenden/Impressum?piwik_campaign={{ CampaignName }}&piwik_kwd={{ BannerName }}_link&skin=0" target="_blank">Impressum</a> |
					<a href="https://spenden.wikimedia.de/spenden/Datenschutz?piwik_campaign={{ CampaignName }}&piwik_kwd={{ BannerName }}_link&skin=0" target="_blank">Datenschutz</a> |
					<a id="application-of-funds-link" href="https://spenden.wikimedia.de/use-of-funds?piwik_campaign={{ CampaignName }}&piwik_kwd={{ BannerName }}_link&skin=0" target="_blank">Wohin geht meine Spende?</a>
				</div>
			</div>
			<img class="banner-tracking" src="https://upload.wikimedia.org/wikipedia/commons/c/ce/Transparent.gif" border="0" height="0" width="0" />
		</div>
	</div>
</div>
{{> mini_banner }}
