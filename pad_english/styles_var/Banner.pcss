.wmde-banner {
	visibility: hidden;
	font-family: $banner-sans-serif;
	color: $color-black-light;
	width: 100%;
	z-index: 10;
	box-shadow: 0 3px 0.6em rgba( 60, 60, 60, 0.4 );

	* {
		box-sizing: border-box;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	&--hidden {
		display: none;
	}
	&--minimised {
		.banner__inner {
			display: none;
		}
	}

	.banner-position--state-finished {
		max-height: 100%;
		overflow-y: auto;
	}

	img {
		border: 0 none;
	}

	button {
		cursor: pointer;
		transition: background 500ms $banner-easing;
	}

	a {
		text-decoration: underline;
		color: $color-gray;
		transition: color 500ms $banner-easing;

		&:hover,
		&:focus {
			color: $color-primary-light;
		}
	}

	.banner__close {
		position: absolute;
		z-index: 30;
		top: 25px;
		right: 15px;
		font-size: 14px;
		font-weight: bold;

		@media ( min-width: $breakpoint_m ) {
			right: 25px;
		}

		.close__link {
			position: relative;
			display: block;
			color: $color-gray;
			text-decoration: none;
			height: 23px;
			line-height: 24px;
			padding-right: 30px;
			transition: color 500ms $banner-easing;

			&--large,
			&--small {
				display: none;
			}

			@media ( min-width: $breakpoint_l ) {
				.close__link--small {
					display: inline;
				}
			}

			@media ( min-width: $breakpoint_xl ) {
				.close__link--small {
					display: none;
				}
				.close__link--large {
					display: inline;
				}
			}

			svg {
				position: absolute;
				top: 0;
				right: 0;
				height: 23px;
				width: 22px;
				path {
					transition: fill 500ms $banner-easing;
				}
			}

			&:hover,
			&:focus {
				color: $color-primary-light;
				svg path {
					fill: $color-primary-light;
				}
			}
		}
	}

	.banner__inner {
		position: relative;
		background: url( 'https://upload.wikimedia.org/wikipedia/commons/b/bb/Puzzle-compressed.png' ) bottom right;
		border: 3px solid $color-primary;
		padding: 25px 0 0;
		overflow: hidden;

		&-content-size-fitter {
			margin: 0 50px;

			@media ( min-width: $breakpoint_m ) {
				margin: 0 100px;
			}

			@media ( min-width: $breakpoint_l ) {
				margin: 0 200px;
			}

			@media ( min-width: $breakpoint_xl ) {
				margin: 0 250px;
			}
		}
	}

	&--visible {
		visibility: visible;
		.banner__inner-content-size-fitter {
			transition: height 500ms $banner-easing;
		}
	}

	.banner__logo {
		display: none;
		position: absolute;
		z-index: 10;
		left: 0;
		top: 0;
		bottom: 0;
		padding-top: 25px;
		padding-left: 20px;
		width: 360px;
		overflow: hidden;
		background: url( 'data:image/png;base64,' ) top left repeat-y;

		@media ( min-width: $breakpoint_m ) {
			display: block;
		}
	}

	.footer {
		position: relative;
		z-index: 20;
		bottom: 0;
		min-height: 40px;
		line-height: 16px;
		padding: 12px 0;
		left: 50px;

		@media ( min-width: $breakpoint_m ) {
			left: 100px;
		}

		@media ( min-width: $breakpoint_l ) {
			left: 200px;
		}

		@media ( min-width: $breakpoint_xl ) {
			left: 250px;
		}
	}

	.banner__slideshow,
	.banner__content {
		position: relative;
		z-index: 30;
		box-shadow: 0 0 5px rgba( 0, 0, 0, 0.1 );
	}

	.banner__slideshow {
		background: $color-white;
	}

	.banner__content {
		display: none;
		flex-wrap: wrap;
		background: $color-gray-light;
	}

	&--form {
		.banner__slideshow {
			display: none;
		}

		.banner__content {
			display: flex;
		}
	}

	.banner__back {
		width: 100%;
		padding: 10px 20px;
	}

	.banner__infobox,
	.banner__form {
		position: relative;
		padding: 0 20px 20px;
		width: 100%;

		@media ( min-width: $breakpoint_m ) {
			width: 50%;
		}
	}

	.banner__form {
		padding-bottom: 66px;

		@media ( min-width: $breakpoint_m ) {
			padding-bottom: 20px;
		}
	}

	.banner__infobox {
		display: none;

		@media ( min-width: $breakpoint_m ) {
			display: block;
		}
	}

	.back__link {
		position: relative;
		padding-left: 8px;
		svg {
			position: absolute;
			left: 0;
			top: 50%;
			margin-top: -3px;
			height: 7px;
			width: 4px;
		}
		path {
			fill: $color-gray;
			transition: fill 500ms $banner-easing;
		}

		&:hover,
		&:focus {
			path {
				fill: $color-primary-light;
			}
		}
	}

	.banner-button__next,
	.button-group__button {
		position: absolute;
		bottom: 20px;
		right: 20px;
		font-size: 18px;
		font-weight: bold;
		border: 0;
		border-radius: 10px;
		height: 44px;
		line-height: 44px;
		padding: 0 54px 0 29px;
		color: $color-white;

		@media ( min-width: $breakpoint_m ) {
			bottom: -22px;
			right: -70px;
		}

		@media ( min-width: $breakpoint_l ) {
			right: -110px;
		}

		svg {
			position: absolute;
			width: 22px;
			height: 14px;
			right: 20px;
			top: 50%;
			margin-top: -5px;
			transition: margin-top 500ms $banner-easing, right 500ms $banner-easing;
		}
	}

	.banner-button__next {
		background: $color-primary;
		font-size: 14px;
		bottom: 10px;
		right: 10px;
		height: 34px;
		line-height: 34px;
		padding: 0 34px 0 10px;

		svg {
			right: 10px;
			width: 11px;
			height: 7px;
			margin-top: -3px;
		}

		@media ( min-width: $breakpoint_xs ) {
			font-size: 18px;
			height: 44px;
			line-height: 44px;
			padding: 0 54px 0 29px;

			svg {
				width: 22px;
				height: 14px;
				right: 20px;
				margin-top: -5px;
			}
		}

		@media ( min-width: $breakpoint_m ) {
			bottom: -22px;
			right: -70px;
		}

		&:hover,
		&:focus {
			background: $color-primary-light;
			svg {
				margin-top: -3px;
			}
		}
	}

	.button-group__button {
		background: $color-gray;
		&.is-valid,
		&.is-valid:hover,
		&.is-valid:focus {
			background: $color-primary;
		}
		svg {
			height: 23px;
			margin-top: -11px;
			path {
				fill: $color-white;
			}
		}
		&:hover,
		&:focus {
			background: $color-gray-dark;
			svg {
				right: 17px;
			}
		}
	}
}
