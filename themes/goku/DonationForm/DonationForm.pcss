.wmde-banner {
	&-form {
		&-field-group {
			padding: 0 0 10px;

			&-legend {
				display: none;
				visibility: hidden;
				font-family: $banner-main-font-family;
				font-size: 12px;
				line-height: 13px;
				color: $color-black-light;
			}
		}

		&-button-container {
			padding: 15px 0 0;
			@media ( min-width: $breakpoint-l ) {
				padding: 0;
			}
		}

		&-button {
			min-width: 240px;
			color: $color-white;
			background-color: $color-primary;
			border-radius: 18px;
			font-size: 14px;
			line-height: 35px;
			height: 35px;
			font-weight: bold;
			text-align: center;
			transition: background-color 500ms $banner-easing;

			&:hover {
				background-color: $color-primary-light;
			}
		}
	}
}
