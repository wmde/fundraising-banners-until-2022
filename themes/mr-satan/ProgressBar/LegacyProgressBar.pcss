.wmde-banner {
	&-progress-bar {
		padding: 0 32px;
		bottom: 16px;
		position: absolute;
		z-index: 10;
		box-sizing: border-box;
		left: 0;
		right: 0;

		&-donation-text {
			display: block;
			font-size: 0.9em;
			font-weight: bold;
			padding: 0 10px;
			color: $color-white;
			line-height: 2em;
		}
		&-wrapper {
			border: 2px solid $color-primary;
			border-radius: 8px;
			max-height: 32px;
		}
		&-donation-fill {
			background: $color-primary;
			height: 28px;
			border-radius: 5px 16px 16px 5px;
		}
		&-days-left {
			position: absolute;
			font-size: 0.9em;
			color: $color-black;
			font-weight: bold;
			padding-left: 10px;
			flex: 1;
			line-height: 30px;
			margin-top: -30px;
			top: auto;
			left: auto;
			text-align: left;
			overflow: hidden;
			white-space: nowrap;
		}

		&-donation-remaining {
			padding: 0 10px;
			text-align: right;
			font-size: 0.9em;
			font-weight: bold;
			color: $color-black;
			line-height: 30px;
			margin-left: -40px;
			margin-top: -30px;
		}

		&-donation-remaining-outer {
			height: 30px;
			line-height: 34px;
			font-size: 0.9em;
			color: $color-black;
			font-weight: bold;
			margin-left: -155px;
		}
	}
}
